#include "stdafx.h"

int main(int argc, char *argv[]) {
  TQuoteBase QuoteBase;
  TStr Content = "The Dark Knight Rises is going to be SO AMAZING!!! :D :D :D";
  TStr Url = "http://www.newyorktimes.com/news_story";
  TStr Url2 = "http://www.carolinesuen.com/news_story";

  TQuote Quote = QuoteBase.AddQuote(Content, Url);
  Quote.AddSource(Url2);
  
  printf("Number of quotes: %d\n", QuoteBase.Len());

  TQuote Q;
  QuoteBase.GetQuote(0, Q);
  printf("Content: %s\n", Q.GetContentString().CStr());
  for (int i = 0; i < Q.GetSources().Len(); i++) {
    printf("URL: %s\n", Q.GetSources()[i].CStr());
  }

  return 0;
}
